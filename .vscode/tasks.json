{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build OpenCL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g", "${workspaceFolder}\\main.cpp",
                "-I", "${env:OPENCL_PATH}\\include",
                "-L", "${env:OPENCL_PATH}\\lib",
                "-lOpenCL",
                "-o", "example.exe",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
        },
        {
            "label": "Build CUDA",
            "type": "shell",
            "command": "nvcc",
            "args": [
                "-g", "${workspaceFolder}\\main.cu",
                "-I", "${env:CUDA_PATH_V12_4}\\include",
                "-I", "${env:OPENCL_PATH}\\include",
                "-L", "${env:CUDA_PATH_V12_4}\\lib\\x64",
                "-L", "${env:OPENCL_PATH}\\lib",
                "-lOpenCL",
                "-lcudart",
                "-o", "example.exe",
                "-std=c++17"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}